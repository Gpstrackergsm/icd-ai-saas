{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "typeRoots": ["./types"],
    "allowImportingTsExtensions": true
  },
  "include": ["lib/**/*", "api/**/*", "data/**/*", "public/**/*", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
